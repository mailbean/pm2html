{
  "name": "@mailbean/pm2html",
  "version": "0.0.45",
  "description": "ProseMirror to HTML",
  "main": "dist/main/index.js",
  "module": "dist/module/index.js",
  "types": "dist/module/index.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "format": "prettier --write \"{src,test}/**/*.ts\"",
    "build": "run-s clean format build:*",
    "build:main": "npx tsc -p tsconfig.json",
    "build:module": "npx tsc -p tsconfig.module.json",
    "pub": "npm run build && npm version patch --force && npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mailbean/pm2html.git"
  },
  "keywords": [
    "prosemirror",
    "html",
    "json"
  ],
  "author": "Philipp Viereck",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mailbean/pm2html/issues"
  },
  "homepage": "https://github.com/mailbean/pm2html#readme",
  "devDependencies": {
    "@tsconfig/node18-strictest-esm": "^1.0.1",
    "@types/node": "^18.15.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.6",
    "rimraf": "^4.4.0",
    "typescript": "^5.0.2"
  },
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/module/index.js",
      "require": "./dist/main/index.js"
    }
  }
}
